{
  "extends": "@hemicycle/typescript-config/module.json",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "jsx": "react-jsx",
    "paths": {
      "@hemicycle/helpers": [
        "../../helpers/src/index.ts"
      ],
      "@hemicycle/rendering": [
        "../../rendering/src/index.ts"
      ],
      "@hemicycle/vanilla": [
        "../../vanilla/src/index.ts"
      ],
      "@hemicycle/core": [
        "../../core/src/index.ts"
      ],
    }
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../helpers"
    },
    {
      "path": "../rendering"
    },
    {
      "path": "../vanilla"
    },
  ]
}