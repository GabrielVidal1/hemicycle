{
  "name": "@hemicycle/core",
  "version": "0.1.5",
  "description": "Core hemicycle.dev layout computations",
  "keywords": [
    "hemicycle",
    "parliament",
    "seat-layout",
    "chart-layout",
    "visualization",
    "typescript",
    "geometry"
  ],
  "homepage": "https://github.com/GabrielVidal1/hemicycle#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/GabrielVidal1/hemicycle.git"
  },
  "bugs": {
    "url": "https://github.com/GabrielVidal1/hemicycle/issues"
  },
  "license": "MIT",
  "author": "Gabriel Vidal <gvidalayrinhac@gmail.com>",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "NODE_ENV=development tsdown --watch",
    "build": "tsdown --config-loader unrun",
    "prepublishOnly": "yarn build",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.ts\""
  }
}